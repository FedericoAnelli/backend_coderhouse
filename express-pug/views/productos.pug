extends layout 

block content
    div(class="container")
        h1(class="m-5 text-center") Productos con Pug
        table(class = "table table-dark table-hover table-striped align-middle text-center") 
            tr 
                th Nombre
                th Precio
                th Imagen 
            each producto in productos
                tr 
                    td= producto.title
                    td= producto.price
                    td 
                        img(class="h-25 w-25" src=producto.thumbnail)


